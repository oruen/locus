<div class='container-fluid'>
  <div class='row-fluid'>
    <div class='sidebar'>
      <div class='controls'>
        <button {{action addPerson}} class='btn'>
          <i class='icon-plus'></i>
          Коллега
        </button>
        <button {{action addTable}} class='btn'>
          <i class='icon-plus'></i>
          Стол
        </button>
      </div>
      <div class='span3'>
        {{outlet}}
      </div>
    </div>
  </div>
</div>
<div class='tableset'>
  <img class='bg' src='/assets/bg_clean.png' style="width:1600px;height:1203px;">
  {{#each desk in Locus.router.tablesController}}
    {{view Locus.TableView tableBinding="desk"}}
  {{/each}}
</div>

