<table class='table table-striped'>
  <thead>
    <tr>
      <th>Коллеги</th>
      <th></th>
    </tr>
  </thead>
  {{#each person in controller}}
    <tr>
      <td>
        <a {{action editPerson person}}>{{person.name}}</a>
      </td>
      <td class='person-controls'>
        <a {{action deletePerson person}}><i class='icon-remove'></i></a>
      </td>
    </tr>
  {{/each}}
</table>
